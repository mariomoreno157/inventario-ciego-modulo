        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/indeterminate_circular_indicator"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/progressbar"
        android:indeterminateTintMode="src_atop"
        android:minHeight="24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ButtonLimpiar"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/sombra_pressed_boton_atras"
        android:onClick="limpiar"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_limpiar" />

    <ImageView
        android:id="@+id/ButtonCosulta"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/sombra_pressed_boton_atras"
        android:onClick="ConsultaDatosTabla"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_export_wo" />


    <ImageView
        android:id="@+id/ButtonVolver"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:background="@drawable/sombra_pressed_boton_atras"
        android:onClick="atras"
        android:layout_marginBottom = "40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/boton_regresar" />

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Edición 1.0.2 – por Gemetytec"
        android:textColor="#607ef5"

        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="05dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>